<?xml version="1.0" encoding="UTF-8"?>

<?import View.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="BorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#mouseClicked" prefHeight="300.0" prefWidth="300.0" stylesheets="@MainStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MyViewController">
   <top>
      <MenuBar fx:id="TopMenuBar" prefHeight="36.0" prefWidth="459.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu fx:id="btn_MenuFile" mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#generateMaze" text="New" />
                <MenuItem mnemonicParsing="false" onAction="#saveMaze" text="Save" />
                <MenuItem mnemonicParsing="false" text="Load" />
            </items>
          </Menu>
          <Menu fx:id="btn_optionsMenu" mnemonicParsing="false" text="Options">
            <items>
              <MenuItem mnemonicParsing="false" text="Properties" />
            </items>
          </Menu>
            <Menu fx:id="btn_helpMenu" mnemonicParsing="false" onAction="#Help" text="Help" />
            <Menu fx:id="btn_aboutMenu" mnemonicParsing="false" text="About" />
            <Menu fx:id="btn_exitMenu" mnemonicParsing="false" onAction="#Exit" text="Exit" />
        </menus>
      </MenuBar>
   </top>
   <bottom>
       <GridPane fx:id="PlayerPrefsGrid" prefHeight="69.0" prefWidth="300.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="166.0" minWidth="10.0" prefWidth="129.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="174.0" minWidth="10.0" prefWidth="148.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
             <Label fx:id="lbl_rowNum" prefHeight="51.0" prefWidth="136.0" text=" Rows:" translateX="20.0" />
             <Label fx:id="lbl_colNum" text=" Columns:" translateX="5.0" translateY="-3.0" GridPane.rowIndex="1" />
             <TextField fx:id="rowInputTextField" prefHeight="24.0" prefWidth="80.0" GridPane.columnIndex="1">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets bottom="1.0" />
               </padding>
            </TextField>
            <TextField fx:id="colInputTextField" prefHeight="24.0" prefWidth="80.0" translateY="-3.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets bottom="1.0" />
               </padding>
            </TextField>
            <Button fx:id="GenerateBtn" layoutX="20.0" mnemonicParsing="false" onAction="#generateMaze" prefHeight="24.0" prefWidth="125.0" text="GenerateMaze" translateX="30.0" GridPane.columnIndex="2">
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </padding></Button>
            <Button fx:id="SolveBtn" mnemonicParsing="false" onAction="#solveMaze" prefHeight="24.0" prefWidth="125.0" text="Solve" translateX="30.0" translateY="-3.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </padding></Button>
         </children>
      </GridPane>
   </bottom>
   <center>
      <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
             <MazeDisplayer fx:id="mazeDisplayer" height="294.0" imageFileNameGoal="./Resources/Images/PinkDiamond.png" imageFileNamePassage="./Resources/Images/LightPinkPassage2.jpg" imageFileNamePlayer="./Resources/Images/PinkPanther.png" imageFileNameStep="./Resources/Images/step.png" imageFileNameWall="./Resources/Images/wall.jpg" layoutX="50.0" layoutY="0.0" onKeyPressed="#keyPressed" width="350.0" />
         </children>
      </Pane>
   </center>
</BorderPane>
